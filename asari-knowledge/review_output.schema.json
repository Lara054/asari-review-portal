{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://asari.review/specs/review_output.schema.json",
  "title": "Asari Review Output Schema",
  "description": "Output structure for Asari VALORANT script review results.",
  "type": "object",
  "required": ["REVIEW_SUMMARY", "REVIEW_ISSUES"],
  "additionalProperties": false,
  "properties": {
    "REVIEW_SUMMARY": {
      "type": "object",
      "description": "レビュー全体のサマリーとスコア。",
      "required": ["reviewedAt", "summary", "scores"],
      "additionalProperties": false,
      "properties": {
        "reviewedAt": {
          "type": "string",
          "description": "レビュー実行日時（ISO形式推奨）。"
        },
        "summary": {
          "type": "string",
          "description": "レビュー全体の要約テキスト。"
        },
        "scores": {
          "type": "object",
          "description": "各観点のスコア（0〜10）。",
          "required": ["structure", "tone", "overall"],
          "additionalProperties": false,
          "properties": {
            "structure": {
              "type": "number",
              "description": "文体・構成・可読性に関するスコア。"
            },
            "tone": {
              "type": "number",
              "description": "トーン・リスク（炎上リスクなど）に関するスコア。"
            },
            "overall": {
              "type": "number",
              "description": "総合スコア。"
            }
          }
        }
      }
    },

    "REVIEW_ISSUES": {
      "type": "array",
      "description": "規約違反や改善ポイントの一覧。",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "category",
          "severity",
          "rule_id",
          "rule_title",
          "line",
          "snippet",
          "problem",
          "suggestion"
        ],
        "properties": {
          "category": {
            "type": "string",
            "description": "観点カテゴリ（例：style_consistency, wording, risk_tone など）。"
          },
          "severity": {
            "type": "string",
            "enum": ["info", "low", "medium", "high"],
            "description": "重大度レベル。"
          },
          "rule_id": {
            "type": "string",
            "description": "違反している規約のID。"
          },
          "rule_title": {
            "type": "string",
            "description": "違反している規約のタイトル。"
          },
          "line": {
            "type": "integer",
            "description": "該当箇所のおおよその行番号（1始まり）。"
          },
          "snippet": {
            "type": "string",
            "description": "台本中の該当テキスト抜粋。"
          },
          "problem": {
            "type": "string",
            "description": "何が問題なのかの説明。"
          },
          "suggestion": {
            "type": "string",
            "description": "どう直すとよいかの具体的な提案。"
          }
        }
      }
    },

    "REVIEW_SUGGESTED_RULES": {
      "type": "array",
      "description": "AIが提案する新しい規約候補（最大5件）。",
      "maxItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "description", "reason", "suggested_category"],
        "properties": {
          "title": {
            "type": "string",
            "description": "提案する新規規約のタイトル。"
          },
          "description": {
            "type": "string",
            "description": "どのようなルールとして追加すべきかの説明。"
          },
          "reason": {
            "type": "string",
            "description": "その規約を追加した方が良いとAIが判断した理由。"
          },
          "suggested_category": {
            "type": "string",
            "description": "どの規約ファイルに入れる想定か（stylebook / phrasebank / risk_lexicon など）。"
          },
          "severity": {
            "type": "string",
            "enum": ["info", "low", "medium", "high"],
            "description": "もし規約化した場合の推定重大度（AI推定）。"
          },
          "examples": {
            "type": "object",
            "description": "その規約が対象とするNG/OK例（任意）。",
            "additionalProperties": false,
            "properties": {
              "ng": {
                "type": "array",
                "items": { "type": "string" },
                "description": "望ましくない例。"
              },
              "ok": {
                "type": "array",
                "items": { "type": "string" },
                "description": "望ましい例。"
              }
            }
          }
        }
      }
    }
  }
}
